<h1>Here is a details of user</h1>

<%user = @user%>

<div class="user-container">
  <img src= "<%=user.photo%>" alt="photo of user"/>
  <div class="user-name-box">
    <p class="user-name"><%=user.name%></p>
    <p class="user-number-of-posts">Number of posts: <%= user.post_counter%></p>
  </div>
</div>
<div class="user-bio">
  <p>Bio</p>
  <p><%=user.bio%></p>
</div>

<div>
  <p><%= link_to "Create new post", "./#{user.id}/posts/new" %></p>
</div>

<div class="posts-container">
  <% user.recent_posts.each do |post| %>
    <div class="post-container">
      <p>Post #<%=post.id%>: <%= link_to "#{post.title}", "./#{user.id}/posts/#{post.id}" %></p>
      <p><%=post.text[0..100]%>...</p>
      <div class="post-comments-likes"> 
        <p>Comments: <%= post.comments_counter || 0%>, Likes: <%= post.likes_counter || 0%></p>
      </div>
    </div>
  <% end %>
</div>

<form class="see-all-posts-btn" action="./<%=user.id%>/posts" method="get">
  <input type="submit" value="See all posts">
</form>
